<div class="container">
  <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
    <% if @post.errors.any? %>
      <h3><%= @post.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>投稿編集</h1>

      <div class="form-group">
        <label>タイトル</label>
          <%= f.text_field :title, class:"form-control" %>
      </div>

      <div class="form-group">
        <label>本文</label>
          <%= f.text_area :text, class:"form-control" %>
      </div>

      <div>
         <%= f.label :is_published_flag, "公開", value: true %>
         <%= f.radio_button :is_published_flag, 'true' %>
      </div>
      <div>
         <%= f.label :is_published_flag, "非公開", value: false %>
         <%= f.radio_button :is_published_flag,'false' %>
       </div>

      <div class="form-group">
        <%= f.submit '変更', class:"btn btn-success" %>
      </div>
      
  <%= link_to "Show" , post_path %>
|
  <%= link_to "Back" , root_path %>
  </div>
   </div>
   </div>
<% end %>
