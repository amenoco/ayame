<div class="container">
  <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
    <% if @post.errors.any? %>
      <h3><%= @post.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <div class="row offset-sm-1">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>投稿編集</h2>

      <div class="form-group">
        <label>タイトル</label>
          <p><%= f.text_field :title, class: "text-box", :size => "30" %></p>
      </div>

      <div class="form-group">
        <label>本文</label>
          <p><%= f.text_area :text, class: "textlines", :size => "30" %></p>
      </div>

      <div>
         <%= f.label :is_published_flag, "公開", value: true %>
         <%= f.radio_button :is_published_flag, 'true' %>
      </div>
      <div>
         <%= f.label :is_published_flag, "非公開", value: false %>
         <%= f.radio_button :is_published_flag,'false' %>
       </div>

      <div class="form-group">
        <%= f.submit '変更する', class:"btn edit-btn" %>
      </div>
      
  <%= link_to "投稿ページ" , post_path %>
|
  <%= link_to "TOPページ" , root_path %>
  </div>
   </div>
   </div>
<% end %>
