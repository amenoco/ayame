<div class="container">
  <div class="row  offset-sm-1">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="font-weight-bold">新規投稿</h2>
      <!-- form_with部分 -->
        <%= form_with model: @post do |f| %>
          <p>タイトル</p>
            <%= f.text_field :title, class: "text-box", :size => "30" %>
        	
          <p>本文</p>
            <%= f.text_area :text, class: "textlines" %>
        	
           <p><%= f.file_field :images, multiple: true %></p>
          
          <div class="form_input">
            <p><%= f.collection_select :category_id, Category.all, :id, :name, { prompt: 'どの投稿をしますか？' }, style: "color: #bf7fff" %></p>
            <p><%= f.submit '投稿する', class: "btn send-btn" %></p>
          </div>
        <% end %>
    </div>
  </div>
</div>