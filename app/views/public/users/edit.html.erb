<div class="container">
  <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2 class="font-weight-bold">登録内容の変更</h2>
            <div class="form-group">
              <%= f.label :プロフィール画像 %>
                <p class=styles: "color  #a3d6cc"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p> 
            </div>
            <div class="form-group">
              <%= f.label :お名前 %>
                <%= f.text_field :name, class: "text-box", class: "form-control" %>
            </div>
      
            <div class="form-group">
              <%= f.label :メールアドレス %>
                <%= f.text_field :email, class: "text-box", class: "form-control" %>
            </div>
      
            <div class="form-group">
              <%= f.label :お住いの都道府県 %>
                <p><%= f.select :address, User.addresses.keys, {}, style: "color: #bf7fff" %></p>
            </div>
            
            <div class="form-group">
              <%= f.label :パスワード %>
                <%= f.password_field :password, class: "text-box", class: "form-control" %>
            </div>
      
            <div class="actions">
              <%= link_to "変更する", users_path(@user.id), method: :post, class: "btn edit-btn" %>
            </div>
            <div class="actions">
              <%= link_to "退会する", withdraw_path, method: :patch, data: { confilm: "本当に退会しますか？" }, class: "btn delete-btn" %>
            </div> 
      
        </div>
      </div>
  <% end %>
</div>
