<div class="container">
  <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>登録内容の変更</h1>

      <div class="form-group">
        <label>お名前</label>
          <%= f.text_field :name, class:"form-control" %>
      </div>

      <div class="form-group">
        <label>メールアドレス</label>
          <%= f.text_field :email, class:"form-control" %>
      </div>

      <div class="form-group">
        <label>お住いの都道府県</label><br>
          <%= f.select :address, User.addresses.keys, {} %> 
      </div>
      
      <div class="form-group">
        <label>パスワード</label>
          <%= f.password_field :encrypted_password, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Post', class:"btn btn-success" %>
      </div>
      
  <%= link_to "マイページ" , my_page_path %>
  </div>
   </div>
   </div>
<% end %>
