<div class="container">
  <div class="row offset-sm-1">
    <div class="col-sm-12 col-md-12 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= flash[:danger] %>
      <h2>新規登録</h2>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          
          <div class="field">
            <%= f.label :お名前 %><br>
            <%= f.text_field :name, placeholder: "あやめ", class: "text-box", :size => "30", autofocus: true %>
          </div>
        
          <div class="field">
            <%= f.label :メールアドレス %><br>
            <%= f.email_field :email, class: "text-box", :size => "30", placeholder: "sample@example.com" %>
          </div>
          
          <div class="field">
            <%= f.label :お住いの都道府県 %><br>
            <%= f.select :address, User.addresses.keys, {}, style: "color: #bf7fff" %>
          </div>
          
          <div class="field">
            <%= f.label :プロフィール画像 %><br>
            <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
          </div>
        
          <div class="field">
            <p><%= f.label :パスワード %>
            <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)
            <% end %></p>
            <%= f.password_field :password, class: "text-box", :size => "30", autocomplete: "new-password" %>  
          </div>
        
          <div class="field">
            <%= f.label :パスワード（確認用） %><br>
           <p><%= f.password_field :password_confirmation, class: "text-box", :size => "30", autocomplete: "new-password" %></p>
          </div>
        
          <div class="actions">
            <p><%= f.submit "新規登録", class: "btn new-btn" %></p>
          </div>
        <% end %>
        
         <p>既に登録済みの方は<%= link_to "こちら", new_user_session_path, style: "color: #84a2d4" %></p>
    </div>
  </div>
</div>
